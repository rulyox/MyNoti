<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewFont</item>
        <item name="android:editTextStyle">@style/EditTextFont</item>
        <item name="android:buttonStyle">@style/ButtonFont</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewFont</item>
        <item name="android:editTextStyle">@style/EditTextFont</item>
        <item name="android:buttonStyle">@style/ButtonFont</item>
        <item name="android:windowBackground">@drawable/dialog_corner</item>
    </style>

    <style name="TextViewFont" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_square_round</item>
    </style>

    <style name="EditTextFont" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/nanum_square_round</item>
    </style>

    <style name="ButtonFont" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/nanum_square_round</item>
    </style>

</resources>
